using System;

namespace ConsoleApp4
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput = "" ;
            string programmExit = "exit";
            int numberFive = 5;
            int productMultiplication;

            while ( userInput != programmExit )
            {
                Console.WriteLine("Введите число, которое хотите умножить на 5:");
                userInput = Console.ReadLine();

                if (userInput == programmExit)
                {
                    Console.WriteLine("Программа заверешна.");
                    break;
                }

                productMultiplication = numberFive * Convert.ToInt32(userInput);
                Console.WriteLine(productMultiplication);

            }
        }

    }
}
